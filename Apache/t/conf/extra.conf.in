#PerlSwitches -Mblib="../../"
PerlModule Apache::Geo::IP

<Location /ip>
  SetHandler perl-script
  PerlHandler My::ip
</Location>

<Location /name>
  SetHandler perl-script
  PerlHandler My::name
</Location>

<Location /cpan>
  SetHandler perl-script
  PerlHandler My::mirror
  PerlSetVar GeoIPMirror "@ServerRoot@/conf/cpan_mirror.txt"
</Location>

<Location /apache>
  SetHandler perl-script
  PerlHandler My::mirror
  PerlSetVar GeoIPMirror "@ServerRoot@/conf/apache_mirror.txt"
</Location>



