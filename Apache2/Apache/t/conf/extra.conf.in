#PerlSwitches -Mblib="../../"
PerlModule Apache2
PerlModule Apache::Geo::IP

<Location /ip>
  SetHandler modperl
  PerlResponseHandler My::ip
</Location>

<Location /name>
  SetHandler modperl
  PerlResponseHandler My::name
</Location>

<Location /cpan>
  SetHandler modperl
  PerlResponseHandler My::mirror
  PerlSetVar GeoIPMirror "@ServerRoot@/conf/cpan_mirror.txt"
</Location>

<Location /apache>
  SetHandler modperl
  PerlResponseHandler My::mirror
  PerlSetVar GeoIPMirror "@ServerRoot@/conf/apache_mirror.txt"
</Location>

